<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Reservations - Lab Reservation System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar bg-dark text-white">
        <div class="d-flex flex-column p-3">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="bi bi-building me-2"></i>
                <span class="fs-4">Lab Reservation</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto" id="sidebarNav">
                <!-- Student Navigation -->
                <li class="nav-item student-only">
                    <a href="/dashboard" class="nav-link text-white">
                        <i class="bi bi-house-door me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="student-only">
                    <a href="/reservation" class="nav-link active text-white">
                        <i class="bi bi-calendar-check me-2"></i>
                        My Reservations
                    </a>
                </li>
                <li class="student-only">
                    <a href="/lab" class="nav-link text-white">
                        <i class="bi bi-pc-display me-2"></i>
                        Available Labs
                    </a>
                </li>
                

                <!-- Technician Navigation -->
                <li class="nav-item technician-only d-none">
                    <a href="/dashboard" class="nav-link text-white">
                        <i class="bi bi-house-door me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="technician-only d-none">
                    <a href="/walkin" class="nav-link text-white">
                        <i class="bi bi-person-plus me-2"></i>
                        Walk-in Reservations
                    </a>
                </li>
                <li class="technician-only d-none">
                    <a href="manage" class="nav-link text-white">
                        <i class="bi bi-gear me-2"></i>
                        Manage Reservations
                    </a>
                </li>
                
            </ul>
            <hr>
             </div>
            </div>

    <!-- Main Content -->
    <div class="main-content">

        <div class="container-fluid py-4">
            <div class="row mb-4 align-items-center justify-content-end">
  <div class="col-auto">
    <div class="dropdown user-dropdown">
      <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="https://via.placeholder.com/40" alt="User" class="rounded-circle me-2 user-img">
        <strong id="userName" class="user-name">User Name</strong>
      </a>    
      <ul class="dropdown-menu dropdown-menu-light text-small  shadow" aria-labelledby="dropdownUser1">
        <li><a class="dropdown-item" href="profile.html">Profile</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="#" onclick="logout()">Sign out</a></li>
      </ul>
    </div>
  </div>
</div>

<div class="custom-line"></div>
            <div class="row mb-4">
                <div class="col-12">
                    <h1>My Reservations</h1>
                    <p class="text-muted">View and manage your lab reservations</p>
                </div>
            </div>

            <!-- Active Reservations -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Active Reservations</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Lab</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="activeReservations"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Past Reservations -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Past Reservations</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Lab</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="pastReservations"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
