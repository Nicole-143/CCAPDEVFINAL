<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Walk-in Reservation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="container mt-5">
    <h2>Edit Walk-in Reservation</h2>
    <form action="/walkin/edit/{{reservation._id}}" method="POST">
      <div class="mb-3">
        <label for="user" class="form-label">Student</label>
        <select name="user" id="user" class="form-select" required>
          {{#each students}}
            <option value="{{_id}}" {{#if (eq _id ../reservation.user)}}selected{{/if}}>{{firstName}} {{lastName}}</option>
          {{/each}}
        </select>
      </div>

      <div class="mb-3">
        <label for="lab" class="form-label">Lab</label>
        <select name="lab" id="lab" class="form-select" required>
          {{#each labs}}
            <option value="{{_id}}" {{#if (eq _id ../reservation.lab)}}selected{{/if}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
<div class="mb-3">
     <label for="date" class="form-label">Date</label>
      <input   type="date"   name="date"  id="date"   class="form-control"  required  value="{{formatDateISO reservation.date}}">
</div>
<div class="mb-3">
    <label for="startTime" class="form-label">Start Time</label>
<select name="startTime" id="startTime" class="form-select" required>
  <option value="">Select a time</option>
  {{#each times}}
    <option value="{{this}}" {{#if (eq this ../reservation.startTime)}}selected{{/if}}>{{this}}</option>
  {{/each}}
</select>
</div>

<div class="mb-3">
    <label for="endTime" class="form-label">End Time</label>
<select name="endTime" id="endTime" class="form-select" required>
  <option value="">Select a time</option>
  {{#each times}}
    <option value="{{this}}" {{#if (eq this ../reservation.endTime)}}selected{{/if}}>{{this}}</option>
  {{/each}}
</select>

</div>

      <div class="mb-3">
        <label for="status" class="form-label">Status</label>
        <select name="status" id="status" class="form-select" required>
          <option value="Pending" {{#if (eq reservation.status "Pending")}}selected{{/if}}>Pending</option>
          <option value="Approved" {{#if (eq reservation.status "Approved")}}selected{{/if}}>Approved</option>
          <option value="Completed" {{#if (eq reservation.status "Completed")}}selected{{/if}}>Completed</option>
          <option value="Cancelled" {{#if (eq reservation.status "Cancelled")}}selected{{/if}}>Cancelled</option>
        </select>
      </div>

      <button type="submit" class="btn btn-warning">Update</button>
      <a href="/dashboard" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
